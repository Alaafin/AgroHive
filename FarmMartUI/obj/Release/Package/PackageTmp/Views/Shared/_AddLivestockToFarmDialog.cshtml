@model FarmMartUI.Models.FarmLivestockViewModel

@*<div class="example-modal" >*@
<div class="modal" role="dialog" id="formAddFarmLivestockDialog" aria-hidden="true" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Livestock List</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("AddFarmLivestock", "FarmLivestock", FormMethod.Post, new { enctype = "multipart/form - data" }))
                {
                    @Html.HiddenFor(model => Model.FarmId)
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <div class="row col-md-offset-1" style="padding:10px">
                            @foreach (var livestock in Model.LivestockListItem.OrderBy(x => x.Name))
                            {
                                <div class="col-md-4">
                                    <div class="checkbox">
                                        <input type="checkbox" name="livestockId" id="chck_@livestock.Id" , value="@livestock.Id" />
                                        <label for="chck_@livestock.Id">@livestock.Name</label>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="row col-md-offset-0">
                            <div class="form-group">
                                <br />
                                <div class="col-md-offset-0 col-md-4">
                                    <input type="submit" value="Add Livestock" class="btn btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
@*</div>*@<!-- /.example-modal -->
