@model FarmMartUI.Models.FarmCropViewModel

<div class="box-body">
    <table class="table  table-responsive">
        <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody style="overflow-y:auto; height:200px">
            @foreach (var f in Model.FarmCropList)
            {
                <tr>
                    <td style="width: 10px">#</td>
                    <td>@f.Crop.Name</td>
                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-danger">Actions</button>
                            <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown">
                                <span class="caret"></span>
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="@Url.Action("Create","Pricing", new { farmCropId = f.Id, farmId = f.FarmId})">Add Pricing</a></li>
                                <li><a href="@Url.Action("PlantCrop","Planting", new { farmCropId = f.Id})" name="FarmCr" data-id="@f.Id">Plant</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div><!-- /.box-body -->
