@model FarmMartUI.Models.FarmLivestockViewModel

@{
    ViewBag.Title = "Add Livestock";
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Add Livestock</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                @using (Html.BeginForm("AddFarmLivestock", "FarmLivestock", FormMethod.Post, new { enctype = "multipart/form - data" }))
                {
                    @Html.HiddenFor(model => Model.FarmId)
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <hr />
                        <div class="row col-md-offset-0" style="padding:10px;">
                            @foreach (var livestock in Model.LivestockListItem.OrderBy(x => x.Name))
                            {
                                <div class="col-md-3">
                                    <div class="checkbox">
                                        <input type="checkbox" name="livestockId" id="chck_@livestock.Id" , value="@livestock.Id" />
                                        <label for="chck_@livestock.Id">@livestock.Name</label>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="row col-md-offset-0" style="padding:10px;">
                            <div class="form-group">
                                <div class="col-md-9 col-md-offset-1">
                                    <input type="submit" value="Add LiveStock to Farm" class="btn btn-primary btn-block" />
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div>
                    @Html.ActionLink("Livestock not listed, add it", "AddLivestock", "Livestock")
                </div>
            </div><!-- /.box-body -->
        </div><!-- /.box -->

    </div>
</div>
