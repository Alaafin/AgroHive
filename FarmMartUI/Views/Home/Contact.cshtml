            <h2>Contact form/Feedback</h2>

            @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
            {
                <div class="row">

                    <div class="col-sm-6">
                        <div class="form-group">
                            @*<label for="Name">Full Name</label>*@
                            @Html.TextBoxFor(m => Model.Name, new { @class= "form-control", @placeholder = "Full name" })
                            @Html.ValidationMessageFor(m => Model.Name, "", new { @class = "text-danger"})
                            @*<input type="text" class="form-control" id="lastname">*@
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            @*<label for="Email">Email</label>*@
                            @Html.TextBoxFor(m => Model.Email, new { @class = "form-control", @placeholder = "Email Address" })
                            @Html.ValidationMessageFor(m => Model.Email, "", new { @class = "text-danger" })
                            @*<input type="text" class="form-control" id="email">*@
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            @*<label for="Subject">Subject</label>*@
                            @Html.TextBoxFor(m => Model.Subject, new { @class = "form-control", @placeholder = "Feedback caption" })
                            @Html.ValidationMessageFor(m => Model.Subject, "", new { @class = "text-danger" })
                            @*<input type="text" class="form-control" id="subject">*@
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            @*<label for="Message">Message</label>*@
                            @Html.TextAreaFor(m => Model.Message, new { @class = "form-control", @placeholder = "Message" })
                            @Html.ValidationMessageFor(m => Model.Message, "", new { @class = "text-danger" })
                            @*<textarea id="message" class="form-control"></textarea>*@
                        </div>
                    </div>

                    <div class="col-sm-12 text-center">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-envelope-o"></i> Send message</button>

                    </div>
                </div>
            }
